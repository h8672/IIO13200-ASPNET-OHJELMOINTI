@{ 
    var joku = "Jack Russell";
    var file = Server.MapPath("~/App_Code/Oppilaat15092016.txt");
    Array oppilaat = File.ReadAllLines(file);
}
<!DOCTYPE html>
<html>
    <head>
        <title>My First Razor Page</title>
    </head>
    <body>
        <h1>Hello @joku, tässä tänään @DateTime.Today.ToShortDateString() läsnäolevat oppilaat</h1>
        <div>
            <p>
                @{
                    int i = 0;
                    foreach (var oppilas in oppilaat)
                    {
                        @oppilas <br/>
                        i++;
                    }
                    @:<h3>Oppilaita oli paikalla @i </h3><br />
                }
            </p>
        </div>
    </body>
</html>
